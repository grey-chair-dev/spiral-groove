# Square API Configuration
SQUARE_ACCESS_TOKEN=your-square-access-token
SQUARE_ENVIRONMENT=sandbox
SQUARE_APPLICATION_ID=your-square-application-id
SQUARE_LOCATION_ID=your-square-location-id
SQUARE_WEBHOOK_SIGNATURE_KEY=your-square-webhook-signature-key

# Google My Business API
GOOGLE_MY_BUSINESS_API_KEY=
GOOGLE_MY_BUSINESS_ACCOUNT_ID=
GOOGLE_MY_BUSINESS_LOCATION_ID=
GOOGLE_MY_BUSINESS_ACCESS_TOKEN=

# Database (Neon PostgreSQL)
DATABASE_URL=postgresql://app_user:password@your-neon-host/neondb?sslmode=require

# Make.com Webhook
MAKE_WEBHOOK_URL=https://hook.make.com/your-webhook-id

# Client Portal Authentication
CLIENT_PASSWORD=choose-a-strong-password
CLIENT_PASSWORD_HASH=precomputed-bcrypt-hash
AUTH_SECRET=generate-a-random-32-byte-secret

# Shared rate limiting (optional)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Webhook queue processor (optional)
WEBHOOK_PROCESS_TOKEN=cron-job-shared-secret

# Feature Flags
ENABLE_SQUARE_SYNC=false
ENABLE_REAL_TIME_INVENTORY=false
ENABLE_NEW_ARRIVALS=false
ENABLE_BOPIS=false
ENABLE_LOCAL_DELIVERY=false
ENABLE_LOYALTY_PROGRAM=false
ENABLE_EVENT_BOOKING=false
ENABLE_GOOGLE_HOURS_SYNC=true
